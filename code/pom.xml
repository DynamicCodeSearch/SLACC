                    <!--</execution>-->
                <!--</executions>-->
            <!--</plugin>-->
            <plugin>
                <groupId>org.antlr</groupId>
                <artifactId>antlr4-maven-plugin</artifactId>
                <version>4.7.1</version>
                <executions>
                    <execution>
                        <id>R</id>
                        <goals>
                            <goal>antlr4</goal>
                        </goals>
                        <configuration>
                            <sourceDirectory>${basedir}/src/main/antlr4/edu/ncsu/r</sourceDirectory>
                            <outputDirectory>${basedir}/target/generated-sources/antlr4/edu/ncsu/r</outputDirectory>
                            <grammars>R.g4</grammars>
                            <includes>
                                <include>R.g4</include>
                                <include>RFilter.g4</include>
                            </includes>
                            <visitor>true</visitor>
                            <listener>true</listener>v
                        </configuration>
                    </execution>
                    <execution>
                        <id>Python</id>
                        <goals>
                            <goal>antlr4</goal>
                        </goals>
                        <configuration>
                            <sourceDirectory>${basedir}/src/main/antlr4/edu/ncsu/python3</sourceDirectory>
                            <outputDirectory>${basedir}/target/generated-sources/antlr4/edu/ncsu/python3</outputDirectory>
                            <grammars>Python3.g4</grammars>
                            <visitor>true</visitor>
                            <listener>true</listener>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
