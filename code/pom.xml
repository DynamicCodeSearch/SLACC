            <url>http://repository.springsource.com/maven/bundles/release</url>
        </repository>
        <repository>
            <id>maven2</id>
            <url>http://repo1.maven.org/maven2</url>
        </repository>
        <repository>
            <id>local-jars</id>
            <url>file:///${project.basedir}/jars</url>
        </repository>
